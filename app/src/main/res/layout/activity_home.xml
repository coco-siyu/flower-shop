<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/flower_bg"
    >

    <TextView
        android:id="@+id/nameView"
        android:layout_width="151dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:text="Welcome "
        android:textColor="@color/row"
        android:textSize="30sp"

        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:text="Here are the several things you can do: "
        android:textColor="@color/row"
        android:textSize="20sp"

        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/classify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <EditText
        android:id="@+id/userName_home"
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:layout_marginTop="96dp"
        android:layout_toLeftOf="@id/nameView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="48dp" />

    <Button
        android:id="@+id/classify"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/userName_home"
        android:layout_marginTop="140dp"
        android:text="Classify"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_home" />

    <Button
        android:id="@+id/addData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_home"
        android:layout_marginTop="12dp"
        android:text="Buy"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tips"
        app:layout_constraintVertical_bias="0.017" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_home"
        android:layout_marginTop="16dp"
        android:text="Gallery"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classify" />

    <Button
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_home"
        android:layout_marginTop="8dp"
        android:text="Tips"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>